@model Voat.Domain.Models.SubverseSubscriptionDetail

@{

    string subverseAge = Age.ToRelative(Model.CreationDate);
    var userData = Voat.Domain.UserData.GetContextUserData();
    System.Diagnostics.Debug.Assert(userData == null || userData.UserName == User.Identity.Name, "Context UserData and Identity UserName mismatch");

    var actionName = ViewBag.ButtonName == null ? "remove" : ViewBag.ButtonName;
    var unActionName = "un" + actionName;

}

<div class="midcol">
    @if (User.Identity.IsAuthenticated)
    {
        <button type="button" onclick="return blockSubverseToggle(this, '@Model.Name')" class="btn-whoaverse-paging btn-xs btn-default btn-sub">@actionName</button>
    }
    else
    {
        <button type="button" class="btn-whoaverse-paging btn-xs btn-default btn-sub" onclick="mustLogin();">block</button>
    }
</div>

<div class="entry">
    <p class="titlerow">
        <a href="/v/@Model.Name" class="h4">@Model.Title: @Model.Name</a>
    </p>
    <div class="well well-lg subversedescriptionbox">
        <div class="md">
            @if (!String.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="subversedescriptionboxcontent">@Model.Description</p>
            }
            else
            {
                <p class="subversedescriptionboxcontent">The owner of this subverse did not write a description yet.</p>
            }
        </div>
    </div>
    <p class="">
        <span class="">
            <span id="subscribercount" class="number">@Model.SubscriberCount</span>
            <span class="word">subscribers, a community for @subverseAge</span>
        </span>
    </p>
</div>