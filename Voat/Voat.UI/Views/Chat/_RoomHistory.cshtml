
@model IEnumerable<ChatMessage>


@if (Model != null && Model.Any())
{
    foreach (var message in Model)
    {
        @* IF YOU CHANGE THIS HTML YOU MUST CHANGE THE proxy.client.appendChatMessage function TO MATCH!!! *@
        <div class="chat-message">
            <div class="chat-message-head">
                <p><b><a target="_blank" href="/user/@message.UserName">@message.UserName</a></b> <span class="chat-message-timestamp">(@message.CreationDate.ToChatTimeDisplay())</span>:</p>
            </div>
            <div class="chat-message-body">
                @Html.Raw(message.Message)
            </div>
        </div>
    }
}
