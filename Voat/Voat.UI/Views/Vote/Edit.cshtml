@model object
<div id="container">
    <div role="main">
        <div class="row nomargin">
            <h1>Create/Edit Vote</h1>
            <form class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Bio">Title</label>
                    <div class="col-md-10">
                        <input name="Bio" class="form-control" id="Bio" type="text">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Bio">Description</label>
                    <div class="col-md-10">
                        <textarea name="Bio" class="form-control"></textarea>
                    </div>
                </div>
            </form>
            <div>
                <h1>Add Option</h1>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Bio">Title</label>
                        <div class="col-md-10">
                            <input name="title" class="form-control" id="Bio" type="text">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Bio">Description (Optional)</label>
                        <div class="col-md-10">
                            <textarea name="description" class="form-control"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-3">
                            <input class="btn-whoaverse" type="submit" value="Add">
                        </div>
                    </div>
                </form>
            </div>
            <div>
                <h1>Add Restriction</h1>
                <form class="form-horizontal" role="form">
                    <div class="form-group">
                        <label class="col-md-2 control-label" for="Bio">Restriction (Optional)</label>
                        <div class="col-md-10">
                            <select name="title" class="form-control" id="Bio" type="text">
                                <option>-- Choose --</option>
                                <option>Member Age Restriction</option>
                                <option>Subscriber Restriction</option>
                                <option>Contribution Point Restriction</option>
                                <option>Contribution Count Restriction</option>
                                <option>Contribution Voting Restriction</option>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-3">
                            <input class="btn-whoaverse" type="submit" value="Add">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
