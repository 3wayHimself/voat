@model Voat.Data.Models.VoteOption

<div data-vote-item="Options">
    <div class="form-horizontal" role="form">
        <h2>Option</h2>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="Title">Title</label>
            <div class="col-md-10">
                <input asp-for="Title" class="form-control" type="text" value="@Model.Title" data-vote-field="Options">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label" asp-for="Content">Description</label>
            <div class="col-md-10">
                <textarea asp-for="Content" class="form-control" value="@Model.Content" data-vote-field="Options"></textarea>
            </div>
        </div>
        
        <div class="col-md-offset-2 col-md-10">
            <div data-vote-list="Outcomes"></div>
            <div class="form-horizontal" role="form">
                <div class="form-group">
                    <label class="col-md-2 control-label" for="Bio">Outcome (Optional)</label>
                    <div class="col-md-10">
                        @*Get this via reflection*@
                        <select name="vote-outcome-type" class="form-control" id="vote-outcome-type" type="text">
                            <option value="ModeratorOutcome">Moderator Outcome</option>
                        </select>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-3">
                        <button class="btn-whoaverse" type="button" onclick="voat.voting.addOutcome(this);">Add Outcome</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn-voat" onclick="voat.voting.removeItem(this, '*[data-vote-item=\'Options\']');">Remove</button>
            </div>
        </div>
    </div>
</div>