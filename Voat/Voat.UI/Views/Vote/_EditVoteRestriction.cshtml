@model VoteRestriction

<div data-vote-item="Restrictions">
    <div class="form-horizontal" role="form">

        @if (Model is ContributionRestriction content)
        {
            @Html.Partial("_EditContentOptions", content);
        }
        else if (Model is SubscriberRestriction subscriber)
        {
            @Html.Partial("_EditContentOptions", subscriber);
        }
        else if (Model is MemberAgeRestriction member)
        {
            @Html.Partial("_EditContentOptions", member);
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn-voat" onclick="voat.voting.removeItem(this, '*[data-vote-item=\'Restrictions\']');">Remove</button>
            </div>
        </div>
    </div>
</div>
