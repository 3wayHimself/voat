@model OptionHandler

<div data-vote-item="Restrictions">
    <div class="form-horizontal" role="form">

        @if (Model is Voat.Voting.Restrictions.VoteRestriction<Voat.Voting.Options.ContentOption> content)
        {
            @Html.Partial("_EditContentOptions", content.Options);
        }
        else if (Model is Voat.Voting.Restrictions.VoteRestriction<Voat.Voting.Options.RestrictionOption> restrictioin)
        {
            @Html.Partial("_EditContentOptions", restrictioin.Options);
        }
        else if (Model is Voat.Voting.Restrictions.VoteRestriction<Voat.Voting.Options.SubverseOption> subverse)
        {
            @Html.Partial("_EditContentOptions", subverse.Options);
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button class="btn-voat" onclick="voat.voting.removeItem(this, '*[data-vote-item=\'Restrictions\']');">Remove</button>
            </div>
        </div>
    </div>
</div>
