@model ModeratorOption


<div class="form-group">
    <label class="col-md-2 control-label" asp-for="UserName"></label>
    <div class="col-md-4">
        <input asp-for="UserName" class="form-control" type="text" data-vote-field="Outcomes">
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" asp-for="Action"></label>
    <div class="col-md-4">
        <select asp-for="Action" asp-items="Enum.GetNames(typeof(Voat.Voting.Options.ModeratorAction)).Select(x => new SelectListItem() { Text = x, Value = x })" class="form-control" data-vote-field="Outcomes"></select>
    </div>
</div>
<div class="form-group">
    <label class="col-md-2 control-label" asp-for="Level"></label>
    <div class="col-md-1">
        <select asp-for="Level" asp-items="Enum.GetNames(typeof(Voat.Domain.Models.ModeratorLevel)).Select(x => new SelectListItem() { Text = x, Value = x })" class="form-control" data-vote-field="Outcomes"></select>
    </div>
</div>
       
