@using Whoaverse.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Manage Account";
}

@Html.Partial("_SidebarUserInfo")

<div id="about-main" class="content about-page" role="main">

    <div class="row nomargin">
        <div class="well col-md-8">

            <h1>Your public profile</h1>
            <p class="h6"><a href="/user/@User.Identity.Name">Click here</a> to go to your public profile.</p>            
            <hr />
            <h1>Change your password</h1>
            <h2>You can use this form to change your password.</h2>
            <hr />

            <p class="text-success">@ViewBag.StatusMessage</p>
            
                    @if (ViewBag.HasLocalPassword)
                    {
                        @Html.Partial("_ChangePasswordPartial")
                    }
                    else
                    {
                        @Html.Partial("_SetPasswordPartial")
                    }

                    <section id="externalLogins">
                        @Html.Action("RemoveAccountList")
                        @*@Html.Partial("_ExternalLoginsListPartial", new { Action = "LinkLogin", ReturnUrl = ViewBag.ReturnUrl })*@
                    </section>
                
            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
