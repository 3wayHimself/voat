@using Whoaverse.Models;
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Manage Account";
}

<div id="container">

    @Html.Partial("_SidebarUserInfo")

    <div class="content" role="main">

        <div class="row nomargin">
            <div class="well col-md-12">

                <h1>Your public profile</h1>
                <hr />
                <p class="h6"><a href="/user/@User.Identity.Name">Click here</a> to view your public profile.</p>
                <h1>User preferences</h1>
                <hr />
                <h2>You can use this form to customize your WhoaVerse experience.</h2>

                @if (ViewBag.HasLocalPassword)
                {
                    <section id="userPreferences">
                        @Html.Action("UserPreferences")
                    </section>
                }

                <h1>Change your password</h1>
                <hr />
                <h2>You can use this form to change your password.</h2>
                <br />

                <p class="text-success">@ViewBag.StatusMessage</p>

                @if (ViewBag.HasLocalPassword)
                {
                    @Html.Partial("_ChangeAccountSettings")
                }
                else
                {
                    @Html.Partial("_SetPasswordPartial")
                }

                <h1>Delete your account</h1>
                <hr />
                <h2>You can use this form to permanently delete your account.</h2>
                <br />

                @if (ViewBag.HasLocalPassword)
                {
                    @Html.Partial("_DeleteAccount")
                }

                <section id="externalLogins">
                    @Html.Action("RemoveAccountList")
                </section>

            </div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
</div>
