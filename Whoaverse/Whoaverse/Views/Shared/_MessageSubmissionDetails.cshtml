@model Whoaverse.Models.Message

@{
    DateTime submissionDate = Model.Date;
    string postAge = Whoaverse.Utils.Submissions.CalcSubmissionAge(submissionDate);
}

<!-- 1 message submission details without comments -->

<div id="siteTable" class="sitetable linklisting">
    <div class="thing id-@Model.Id odd link self" onclick="click_thing(this)" data-fullname="t3_@Model.Id" data-ups="2" data-downs="0">
        <p class="parent"></p>
        <span class="rank">1</span>

        @Html.Partial("_votingIconsSubmission", Model)

        <div class="entry unvoted">
            <p class="title">
                <a class="title may-blank " href="/v/@Model.Subverse/comments/@Model.Id" tabindex="1">@Model.Title</a>&#32;
                <span class="domain">(<a href="/v/@Model.Subverse">self.@Model.Name</a>)</span>
            </p>
            <p class="tagline">
                submitted&#32;
                <time title="@Model.Date" datetime="@Model.Date">@postAge</time>&#32;ago&#32;by&#32;
                <a href="/user/@Model.Name" class="author may-blank id-t2_@Model.Id">@Model.Name</a>
                <span class="userattrs"></span>
            </p>

            @{
                if (!Model.MessageContent.IsEmpty())
                {
                    <div class="expando">
                        <form action="#" class="usertext" onsubmit="return post_form(this, 'editusertext')" id="form-t3_2254dkkb7">
                            <input type="hidden" name="thing_id" value="t3_2254dk" />
                            <div class="usertext-body may-blank-within">
                                <div class="md">
                                    <p>@Html.Raw(@Whoaverse.Utils.Formatting.formatMessage(@Model.MessageContent))</p>
                                </div>
                            </div>
                        </form>
                    </div>
                }
            }

            <ul class="flat-list buttons">
                <li class="first">
                    <a href="/v/@Model.Subverse/comments/@Model.Id" class="comments may-blank">@Model.Comments.Count comments</a>
                </li>
                <li class="share">
                    <span class="share-button toggle" style="">
                        <a class="option active login-required" href="#" tabindex="100">share</a>
                        <a class="option " href="#">cancel</a>
                    </span>
                </li>
            </ul>
        </div>
        <div class="child"></div>
        <div class="clearleft">
            <!--IE6sux-->
        </div>
    </div>
    <div class="clearleft">
        <!--IE6sux-->
    </div>
</div>

