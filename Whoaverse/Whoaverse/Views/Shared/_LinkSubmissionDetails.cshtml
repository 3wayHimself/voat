@model Whoaverse.Models.Message

@using Whoaverse.Utils;

@{
    DateTime submissionDate = Model.Date;
    string postAge = Submissions.CalcSubmissionAge(submissionDate);
}

@{
    //type 2 = urls
    //type 1 = message
    if (Model.Type == 2)
    {

        string submissionDomain = UrlUtility.GetDomainFromUri(Model.MessageContent);

        <!-- 1 link submission details without comments -->
        <div id="siteTable" class="sitetable linklisting">

            <div id="submissionid-@Model.Id" class="thing id-@Model.Id odd link " onclick=" click_thing(this)" data-fullname="t3_226d84" data-ups="4" data-downs="1">
                <p class="parent"></p>
                <span class="rank">1</span>

                @Html.Partial("_votingIconsSubmission", Model)

                @{
        if (Model.Thumbnail != null)
        {
            <a class="thumbnail may-blank " href="@Model.MessageContent">
                <img src="~/Thumbs/@Model.Thumbnail" width='70' height='70' alt="" />
            </a>
        }
                }

                <div class="entry unvoted">
                    <p class="title">
                        <a class="title may-blank " href="@Model.MessageContent" tabindex="1">@Model.Linkdescription</a>&#32;<span class="domain">(<a href="#">@submissionDomain</a>)</span>
                    </p>
                    <p class="tagline">
                        submitted&#32;
                        <time title="@Model.Date" datetime="@Model.Date">@postAge</time>&#32;ago&#32;by&#32;<a href="/user/@Model.Name" class="author may-blank id-t2_efy08">@Model.Name</a>
                        <span class="userattrs"></span>
                    </p>
                    <ul class="flat-list buttons">
                        <li class="first">
                            <a href="/v/@Model.Subverse/comments/@Model.Id" class="comments may-blank">@Model.Comments.Count comments</a>
                        </li>
                        <li class="share">
                            <span class="share-button toggle" style=""><a class="option active login-required" href="#" tabindex="100">share</a><a class="option " href="#">cancel</a></span>
                        </li>
                    </ul>
                    <div class="expando" style='display: none'>
                        <span class="error">loading...</span>
                    </div>
                </div>
                <div class="child"></div>
                <div class="clearleft">
                    <!--IE6sux-->
                </div>
            </div>

            <div class="clearleft">
                <!--IE6sux-->
            </div>

        </div>

    }

}