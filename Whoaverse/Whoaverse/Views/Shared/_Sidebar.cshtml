@model Whoaverse.Models.Subverse

@{
    string subverseAge = Whoaverse.Utils.Submissions.CalcSubmissionAge(Model.creation_date);
    string subverseOwner = "Atko";
    var subOwner = Model.SubverseAdmins.Where(n => n.SubverseName == Model.name && n.Power == 1).FirstOrDefault();
    if (subOwner == null)
    {
        subverseOwner = "Atko"; //temp until existing whoaverse subverses in db are setup
    }
}

<div class="side">
    <div class="spacer">
        <div class="titlebox">
            <h1 class="hover whoaversename">
                <a href="/v/@Model.name" class="hover">@Model.name</a>
            </h1>
            <button type="button" class="btn btn-xs btn-default">subscribe</button>
            <span class="subscribers">
                <span class="number">X</span>
                <span class="word">readers</span>
            </span>
            <p class="users-online fuzzed" title="logged-in users viewing this subwhoaverse in the past 15 minutes">
                <span class="number">~X</span>
                <span class="word">users here now</span>
            </p>
            <form action="#" class="usertext" onsubmit="return post_form(this, 'editusertext')" id="form-t5_317us4tp">
                <input name="thing_id" value="t5_317us" type="hidden">
                <div class="usertext-body may-blank-within">
                    <div class="md">
                        <p>
                            @Html.Raw(@Whoaverse.Utils.Formatting.FormatMessage(@Model.sidebar))
                        </p>
                    </div>
                </div>
            </form>
            <div class="bottom">
                created by <a href="/user/@subverseOwner" class="author may-blank id-t2_5fggn">@subverseOwner</a>
                <span class="userattrs"></span>
                <span class="age">a community for <time title="@Model.creation_date" datetime="@Model.creation_date">@subverseAge</time></span>
            </div>
            <div class="clear">
            </div>
        </div>
    </div>
    <div class="spacer">
        <div class="sidecontentbox ">
            <a class="helplink" href="#">message the moderators</a>
            <div class="title">
                <h1>MODERATORS</h1>
            </div>
            <ul class="content">
                <li>
                    <a href="/user/@subverseOwner" class="author may-blank id-t2_5fggn">@subverseOwner</a><span class="userattrs"></span>
                </li>
            </ul>
        </div>
    </div>
</div>