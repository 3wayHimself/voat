@model PagedList.IPagedList<Whoaverse.Models.Comment>

@{
    ViewBag.Title = "Comment history (most recent 200 comments) for " + @ViewBag.userid;
}

@using PagedList.Mvc;
@using Whoaverse.Utils;

<div id="container">
    <div class="content-no-margin" role="main">
        <div class="alert-title">Comment history (most recent 200 comments) for @ViewBag.userid.</div>

        @foreach (var submission in Model)
        {
            @Html.Partial("Userprofile/_UserProfileComment", submission)
        }

        @if (Model.PageCount > 1)
        {
            @Html.PagedListPager(Model, page => Url.Action("UserProfile", new { page }), WhoaversePagerOptions.PagedListRenderOptions())
        }

    </div>
</div>