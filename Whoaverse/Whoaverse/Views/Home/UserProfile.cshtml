    //(current page number -1)*25
    int currentPageNumber = Model.PageNumber;
    int counterCont = (currentPageNumber - 1) * 25;

    int counter = counterCont + 1;
    string submissionClass = "";

}

@using PagedList.Mvc;
@using Whoaverse.Utils;

@Html.Partial("_SidebarUserInfo")

