@model IEnumerable<Whoaverse.Models.Subverseflairsetting>

@{
    var subverseName = ViewBag.SubverseName;
    var submissionId = ViewBag.SubmissionId;
}

@using Whoaverse.Utils;

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="modalLabel">Select a link flair to apply to this submission:</h4>
        </div>
        <div class="modal-body">
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <button type="button" class="btn btn-default btn-xs" onclick="return applyflair(@submissionId, @item.Id, '@item.Label', '@item.CssClass')">@item.Label</button>
                }
            }
            else
            {
                <p>This subverse does not currently have any link flairs setup. Please go to flair settings (link on your subverse sidebar) to configure link flairs.</p>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-whoaverse-medium" data-dismiss="modal">Cancel</button>
        </div>
    </div>
</div>

